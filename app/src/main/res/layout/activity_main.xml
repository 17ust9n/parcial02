<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF0000"
    android:padding="24dp">

    <!-- Panel blanco central -->
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:padding="24dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Logo -->
            <ImageView
                android:id="@+id/imgLogo"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/cruz_roja"
                android:contentDescription="Logo del hospital"
                android:layout_marginBottom="24dp"
                android:scaleType="centerInside"/>

            <!-- Texto de bienvenida -->
            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bienvenido a nuestro Hospital. Qué se te ofrece?"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_marginBottom="32dp"/>

            <!-- Botón Médicos -->
            <Button
                android:id="@+id/btnMedicos"
                android:layout_width="194dp"
                android:layout_height="50dp"
                android:text="Médicos"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/verde"
                android:layout_marginBottom="12dp"/>

            <!-- Botón Pacientes -->
            <Button
                android:id="@+id/btnPacientes"
                android:layout_width="190dp"
                android:layout_height="50dp"
                android:text="Pacientes"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/azul"
                android:layout_marginBottom="12dp"/>

            <!-- Botón Cerrar sesión -->
            <Button
                android:id="@+id/btnLogout"
                android:layout_width="195dp"
                android:layout_height="50dp"
                android:text="Cerrar sesión"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/rojo"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
