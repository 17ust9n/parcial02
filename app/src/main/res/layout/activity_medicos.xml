<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF0000"
    android:padding="24dp">

    <!-- Panel blanco -->
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:padding="24dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Título -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tabla de Médicos"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="16dp"/>

            <!-- Tabla de Médicos -->
            <TableLayout
                android:id="@+id/tableMedicos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*"
                android:layout_marginBottom="24dp">

                <TableRow>
                    <TextView android:text="Nombre" android:textStyle="bold" android:padding="8dp"/>
                    <TextView android:text="Especialidad" android:textStyle="bold" android:padding="8dp"/>
                    <TextView android:text="Teléfono" android:textStyle="bold" android:padding="8dp"/>
                </TableRow>

                <TableRow>
                    <TextView android:text="Dr. Pérez" android:padding="8dp"/>
                    <TextView android:text="Cardiología" android:padding="8dp"/>
                    <TextView android:text="123456789" android:padding="8dp"/>
                </TableRow>

                <TableRow>
                    <TextView android:text="Dra. Gómez" android:padding="8dp"/>
                    <TextView android:text="Pediatría" android:padding="8dp"/>
                    <TextView android:text="987654321" android:padding="8dp"/>
                </TableRow>

            </TableLayout>

            <!-- Botón Volver -->
            <Button
                android:id="@+id/btnVolver"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Volver"
                android:backgroundTint="@color/rojo"
                android:textColor="@android:color/white"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
